<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/entry"
    >

    <RelativeLayout
        android:background="@drawable/border_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="15sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp">

        <ImageView
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:id="@+id/logo"
            android:src="@drawable/cutlery"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/logo"
            android:layout_marginStart="10sp"
            android:id="@+id/nameAndTS"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameofexpense"
                android:text="Some Expense Entry........."
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_stamp"
                android:text="01/21/2019, 10:30 am"/>

        </LinearLayout>

        <TextView
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/nameAndTS"
            android:id="@+id/totalCost"
            android:layout_marginStart="10sp"
            android:textSize="15sp"
            android:text="â‚± 50000000000.05"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:autoSizeTextType="uniform"
            />



    </RelativeLayout>

</LinearLayout>