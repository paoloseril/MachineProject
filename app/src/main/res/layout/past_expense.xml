<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:background="@drawable/custom_ripple_3">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/cutlery"
        android:tint="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/nameAndTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameofexpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/montserrat"
            android:text="Some Expense Entry........."
            android:textColor="@color/colorTextLight" />

        <TextView
            android:id="@+id/time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="01/21/2019, 10:30 am"
            android:textColor="@color/colorTextLight" />

    </LinearLayout>

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:gravity="end"
        android:maxLines="1"
        android:text="P 450.05"
        android:textColor="@color/colorTextLight"
        android:textStyle="bold" />

</LinearLayout>